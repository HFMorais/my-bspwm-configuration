[colors]
background = #2E3440
background-alt = #3B4252
foreground = #E5E9F0
primary = #EBCB8B
secondary = #D08770
alert = #BF616A
disabled = #4C566A

[bar/bar]
width = 100%
height = 24pt
radius = 0

; dpi = 96

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt

border-size = 0pt
border-color = #00000000

padding-left = 0
padding-right = 0

module-margin = 0

separator = |
separator-foreground = ${colors.disabled}

font-0 = FiraCode Nerd Font;2
font-1 = FiraCode Nerd Font:size=10;2
font-2 = Font Awesome 5 Brands:size=10;2
font-3 = Font Awesome 5 Free Solid:size=10;2
font-4 = Font Awesome 5 Free Solid:size=10;2

modules-left = bspwm
modules-center = xwindow
modules-right = pulseaudio memory cpu eth date powermenu

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

;tray-position = right

; wm-restack = generic
; wm-restack = bspwm
; wm-restack = i3

; override-redirect = true

[module/bspwm]
type = internal/bspwm

format = <label-state>
pin-workspaces = false
enable-scroll = true

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

label-focused = %icon%
label-focused-padding = 1
label-focused-overline = ${colors.primary}

label-occupied = %icon%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}

label-urgent = %icon%
label-urgent-padding = 1
label-urgent-foreground = ${colors.primary}

label-empty = %icon%
label-empty-padding = 1
label-empty-foreground = ${colors.disabled}

[module/xwindow]
type = internal/xwindow
label-font = 2
label = %title:0:60:...%

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume><label-volume>

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "
ramp-volume-foreground = ${colors.primary}
ramp-volume-font = 4

format-volume-prefix-foreground = ${colors.primary}
label-volume = %percentage%%
label-volume-font = 2

format-muted-prefix = " "
format-muted-prefix-font = 4
format-muted-prefix-foreground = ${colors.alert}
label-muted-font = 2
label-muted = Muted
label-muted-foreground = ${colors.disabled}

click-right = pavucontrol

[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.primary}
format-prefix-font = 2
label = %percentage_used:2%%
label-font = 2

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.primary}
format-prefix-font = 2
label = %percentage:2%%
label-font = 2

[module/eth]
type = internal/network
interface-type = wired
interface = eth0
interval = 3.0

format-connected-prefix = " "
format-connected-padding = 1
format-connected-prefix-foreground = ${colors.primary}

label-connected = %{F#F0C674}%ifname%%{F-}
label-connected-overline = ${colors.background}
label-connected-underline = ${colors.background}
label-disconnected-underline = ${colors.background}
label-disconnected-overline = ${colors.background}

format-disconnected = 󰈂
format-disconnected-foreground = ${colors.alert}
format-disconnected-padding = 0

;type = internal/network
;interface-type = wired
;interface = enp6s0
;interval = 3.0
;
;format-connected-prefix = " "
;format-connected-padding = 1
;format-connected-prefix-foreground = ${colors.primary}
;;label-connected = %{A1:setsid -f connman-gtk:}ETH%{A}
;label-connected = %{F#F0C674}%ifname%%{F-}
;label-connected-font = 2
;label-connected-foreground = ${colors.foreground}
;
;format-disconnected-prefix = " "
;format-disconnected-padding = 1
;format-disconnected-prefix-foreground = ${colors.alert}
;format-disconnected-foreground = ${colors.foreground}
;format-disconnected = Offline

;[module/nordvpn]
;type = custom/script
;interval = 5.0
;label = %output:0:15:...%
;label-fail = %output:0:15:...%

[module/date]
type = internal/date
interval = 1

date = %Y-%m-%d %H:%M
date-alt = %Y-%m-%d %H:%M:%S

label = %date%
label-foreground = ${colors.foreground}
label-font = 2

[module/powermenu]
type = custom/text
content-foreground = ${colors.primary}
content-padding = 1
content-font = 2
;click-left = "$HOME/.config/rofi/powermenu/powermenu.sh"
content = "⏻ "

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini
